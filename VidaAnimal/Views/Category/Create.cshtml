@model CategoryCreateViewModel

<h2>Crear nueva Categoria</h2>
<form asp-controller="Category" asp-action="Create" method="post">
    <div class="col-3">
        <label for="validationDefault02">Nombre</label>
        <input asp-for="Name" type="text" class="form-control" id="validationDefault02" placeholder="">
    </div>

    <div class="col-3">
        <label for="validationDefault02">Detalles</label>
        <input asp-for="Details" type="text" class="form-control" id="validationDefault02" placeholder="">
    </div>
    <hr />
    <br />
    <div>
        <input type="Submit" class="btn btn-primary" value="Guardar" />
    </div>
</form>